<main>
    <section>
        <form class="gridTemplate" action="/login" method="post">
            <div>

                <label for="email">Email</label>
                <input
                    type="text"
                    name="email"
                    id="email"
                    placeholder="Email"
                />
            </div>
            <div>

                <label for="password">Password</label>
                <input
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Password"
                />
            </div>

            <button type="submit">Login</button>
        </form>
    </section>
</main>